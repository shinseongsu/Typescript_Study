{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "./dist",
      "target": "es5",
      "outDir": "dist",
      "baseUrl": "./src",
      "lib": ["dom", "es2015","es2016","es2017","es2018","es2019","es2020"],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "module": "es2015",
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "include": ["src"]
}